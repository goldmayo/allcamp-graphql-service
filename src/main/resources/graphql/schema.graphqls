schema {
  query: Query
  # mutation: Mutation
}

type Query {
  # Return CampInfo by contentId
  findCampById(contentId: Int): CampInfo
  # Return Relay Connection
  searchCamps(first: Int, after: String, last: Int, before: String, params: CampSearchParamsDto): CampInfoConnection
  searchCampsForward(first: Int!, after: String, params: CampSearchParamsDto): CampInfoConnection
  searchCampsBackward(last: Int!, before: String, params: CampSearchParamsDto): CampInfoConnection
}
# Relay Pagination type
type CampInfoConnection {
  totalCounts: Int
  edges: [CampInfoEdge]
  pageInfo: PageInfo
}

type PageInfo {
  startCursor: String
  endCursor: String
  hasNextPage: Boolean!
  hasPreviousPage: Boolean!
}

type CampInfoEdge {
  node: CampInfo
  cursor: String
}

